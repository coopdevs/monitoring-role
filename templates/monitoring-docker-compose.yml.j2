version: "3.1"
services:
{% if monitoring_nexporter_enabled %}
  nexporter:
    image: quay.io/prometheus/node-exporter:{{ monitoring_nexporter_image_version }}
    container_name: {{ monitoring_nexporter_container_name }}
    restart: always
    ports:
      - {{ monitoring_nexporter_docker_bind }}
    volumes:
      - "/:/host:ro,rslave"
    healthcheck:
      test: 'curl {{ monitoring_nexporter_url }}/metrics'
      interval: 2s
      timeout: 20s
{% endif %}
{% if monitoring_promtail_enabled %}
  promtail:
    image: quay.io/prometheus/node-exporter:{{ monitoring_nexporter_image_version }}
    container_name: {{ monitoring_nexporter_conatiner_name }}
    restart: always
    ports:
      - {{ monitoring_promtail_docker_bind}}
    volumes:
    {% for volume in monitoring_promtail_docker_volumes %}
      - {{ volume }}
    {% endfor %}
    healthcheck:
      test: 'curl https://{{ monitoring_promtail_host }}:{{ monitoring_promtail_port }}/ready'
      interval: 2s
      timeout: 20s
    command: -config.file=/etc/promtail/config.yaml
{% endif %}
